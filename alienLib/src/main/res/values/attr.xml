<?xml version="1.0" encoding="utf-8"?>
<resources>

    <declare-styleable name="process_view">
        <attr name="bolder_width_dp" format="float"/>
        <attr name="bolder_color" format="color"/>

        <attr name="block_count" format="integer"/>
        <attr name="block_progress" format="integer"/>
        <attr name="block_selected_color" format="color"/>
        <attr name="block_selected_colors" format="reference"/>
        <attr name="block_unselected_color" format="color"/>

        <attr name="text_padding_top_bottom_dp" format="float"/>
        <attr name="text_size_sp" format="integer"/>
        <attr name="text_auto_zoom_out" format="boolean"/>
        <attr name="text_color" format="color"/>
        <attr name="texts" format="reference"/>
        <attr name="text_split_key" format="enum">
            <enum name="SPLIT_KEY_1" value="0x0000"/>
            <enum name="SPLIT_KEY_2" value="0x0001"/>
            <enum name="SPLIT_KEY_3" value="0x0002"/>
            <enum name="SPLIT_KEY_4" value="0x0003"/>
            <enum name="SPLIT_KEY_5" value="0x0004"/>
            <enum name="SPLIT_KEY_6" value="0x0005"/>
        </attr>
        <attr name="text_align" format="enum">
            <enum name="LEFT" value="0x0000"/>
            <enum name="CENTER" value="0x0001"/>
            <enum name="RIGHT" value="0x0002"/>
        </attr>

        <!-- Haven't done -->
        <attr name="direction" format="enum">
            <enum name="VERTICAL" value="0"/>
            <enum name="HORIZONTAL" value="1"/>
        </attr>

        <attr name="angle" format="float"/>
        <!-- Haven't done -->
        <attr name="enable_cycle_line" format="boolean"/>
        <attr name="block_percent" format="reference"/>

        <attr name="between_space" format="integer"/>

        <attr name="arrow_type" format="enum">
            <enum name="FULL_ARROW" value="0x0000"/>
            <enum name="SINGLE_ARROW" value="0x0001"/>
        </attr>

        <attr name="arrow_full" format="flags">
            <flag name="NON" value="0x0000"/>
            <flag name="START" value="0x0001"/>
            <flag name="END" value="0x0002"/>
        </attr>

    </declare-styleable>

</resources>