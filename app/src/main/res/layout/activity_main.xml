<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@color/black">

        <Button
            android:id="@+id/add_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add_Count"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/reduce_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reduce_Count"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <Button
            android:id="@+id/change_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Type"
            app:layout_constraintTop_toBottomOf="@id/reduce_count"
            app:layout_constraintBottom_toTopOf="@id/progress"/>

        <com.alien.process_view.process_view.CubeProcessView
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            app:texts_string="@array/texts_string"
            app:angle="25"
            app:bolder_width="2.5"
            app:between_space="10"
            app:block_count="4"
            app:block_progress="2"
            app:block_percent="@array/counts"
            app:block_selected_color="#F85F05"
            app:block_selected_colors="@array/selected_colors"
            app:block_unselected_color="#00000000"
            app:arrow_type="FULL_ARROW_END"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <SeekBar
            android:id="@+id/angle_seek_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="179"
            android:min="1"
            app:layout_constraintTop_toBottomOf="@id/progress"
            app:layout_constraintBottom_toTopOf="@id/add"/>

        <Button
            android:id="@+id/reduce"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reduce"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>